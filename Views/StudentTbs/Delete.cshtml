@model SchoolManagementSystemASPProject.Models.StudentTb

@{
    ViewData["Title"] = "Delete";
}

<h1 class="row justify-content-center " style="margin-top:150px; ">حذف الطلاب </h1>
<hr />

<h3>هل حقا تريد الحذف ؟</h3>
<div class="row justify-content-center ">
    <dl class="row">
        <dt class = "col-sm-2">
          الاسم : 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
          الهاتف : 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt class = "col-sm-2">
          الصف : 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ClassName)
        </dd>
    </dl>
    
     <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="حـــذف" class="btn btn-danger" />
        <div style="direction:ltr; margin-bottom: 350px" ;>
            <a asp-action="Index" class="btn btn-secondary">العودة للقائمة</a>
        </div>
    </form>
</div>
