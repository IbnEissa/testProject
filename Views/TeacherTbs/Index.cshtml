@model IEnumerable<SchoolManagementSystemASPProject.Models.TeacherTb>

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";

}

<h1 style="margin-top:150px;">بيانات المعلمين</h1>
<p style="direction:ltr; color:white;">
    <button type="button" class="btn btn-primary"><i class="bi bi-plus"></i> @Html.ActionLink("معلم جديد","Create","TeacherTbs")</button>
</p>
<div style="background-color: #f2f2f2; padding: 20px;">


    <table class="table table-success table-striped" style="margin-bottom:350px; ">
    <thead>
        <tr>
            <th>
                الاسم
            </th>
            <th>
                الهاتف 
            </th>
            <th>
               نوع الوردية 
            </th>
            <th>
               التخصص
            </th>
            <th>
              المهمة 
            </th>
            <th>
               سنوات الخبره
            </th>
            <th>
              المؤهل 
            </th>
            <th>
              سنة التخرج
            </th>
            <th>
             حالة التفعيل
            </th>
            <th>
              البصمة
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Shift_type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.major)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.task)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.exceperiance_years)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.qualification)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.date_qualification)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.state)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fingerPrintData)
            </td>
                <td>
                    <button type="button" class="btn btn-warning">
                        <i class="bi bi-pencil-square"></i> <a href="@Url.Action("Edit", "TeacherTbs" )?id=@item.Id">تعديل </a>

                    </button>
                    <button type="button" class="btn btn-info">
                        <i class="bi bi-list-columns-reverse">  </i>  <a href="@Url.Action("Details", "TeacherTbs" )?id=@item.Id">تفاصيل</a>
                    </button>
                    <button type="button" class="btn btn-danger"><i class="bi bi-trash3"></i> <a href="@Url.Action("Delete", "TeacherTbs" )?id=@item.Id">حذف</a></button>
                </td>
        </tr>
}
    </tbody>
</table>
</div>
