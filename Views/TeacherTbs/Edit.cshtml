@model SchoolManagementSystemASPProject.Models.TeacherTb

@{
    ViewData["Title"] = "Edit";
}

<h1 class="row justify-content-center " style="margin-top:150px; ">تعديل المعلمين  </h1>
<hr />

<div class="row justify-content-center ">
    <div class="col-md-4">
        <form asp-action="Edit" style="border: 1px solid #ccc; padding: 50px; border-radius: 5px;">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"> الاسم : </label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label">الهاتف : </label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Shift_type" class="control-label">نوع الوردية : </label>
                <input asp-for="Shift_type" class="form-control" />
                <span asp-validation-for="Shift_type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="major" class="control-label">التخصص : </label>
                <input asp-for="major" class="form-control" />
                <span asp-validation-for="major" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="task" class="control-label">المهمة : </label>
                <input asp-for="task" class="form-control" />
                <span asp-validation-for="task" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="exceperiance_years" class="control-label">سنوات الخبره : </label>
                <input asp-for="exceperiance_years" class="form-control" />
                <span asp-validation-for="exceperiance_years" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="qualification" class="control-label">المؤهل : </label>
                <input asp-for="qualification" class="form-control" />
                <span asp-validation-for="qualification" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="date_qualification" class="control-label">سنوات الخبرة : </label>
                <input asp-for="date_qualification" class="form-control" />
                <span asp-validation-for="date_qualification" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="state" />الحالة : 
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="fingerPrintData" /> لدية بصمة : 
                </label>
            </div>
            <div class="form-group row justify-content-center">
                <input type="submit" value="حفـــــظ" class="btn btn-primary" style="width:120px" />
            </div>
        </form>
    </div>
</div>
<div style="direction:ltr; margin-bottom: 350px" ;>
    <a asp-action="Index" class="btn btn-secondary">العودة للقائمة</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
