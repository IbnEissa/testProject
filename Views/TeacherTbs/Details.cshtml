@model SchoolManagementSystemASPProject.Models.TeacherTb

@{
    ViewData["Title"] = "Details";
}
<h1 class="row justify-content-center " style="margin-top:150px; ">تفاصيل المعلمين </h1>
<hr />

<div class="row justify-content-center ">
    <dl class="row">
        <dt class = "col-sm-2">
          الاسم : 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
           الهاتف : 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt class = "col-sm-2">
          نوع الوردية : 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Shift_type)
        </dd>
        <dt class = "col-sm-2">
           التخصص : 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.major)
        </dd>
        <dt class = "col-sm-2">
          المهمة : 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.task)
        </dd>
        <dt class = "col-sm-2">
          سنوات الخبرة : 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.exceperiance_years)
        </dd>
        <dt class = "col-sm-2">
          المؤهل : 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.qualification)
        </dd>
        <dt class = "col-sm-2">
         سنة الحصول على المؤهل : 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.date_qualification)
        </dd>
        <dt class = "col-sm-2">
           الحالة : 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.state)
        </dd>
        <dt class = "col-sm-2">
        لدية بصمة : 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.fingerPrintData)
        </dd>
    </dl>
</div>
<div>
    <button type="button" class="btn btn-warning">
        <i class="bi bi-pencil-square"></i>  <a asp-action="Edit" asp-route-id="@Model?.Id">تعديل</a>

    </button>
    <div style="direction:ltr; margin-bottom: 350px" ;>
        <a asp-action="Index" class="btn btn-secondary">العودة للقائمة</a>
    </div>
</div>
