@model SchoolManagementSystemASPProject.Models.ClassRoom

@{
    ViewData["Title"] = "Create";
}

<h1 class="row justify-content-center " style="margin-top:150px; ">إضافة الفصول الدراسية</h1>
<div class="row justify-content-center ">
    <div class="col-md-4">
        <form asp-action="Create" method="post" style="border: 1px solid #ccc; padding: 50px; border-radius: 5px;">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">اسم الصف :</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group row justify-content-center">
                <input type="submit" value="حفـــــظ" class="btn btn-primary" style="width:120px" />
            </div>
        </form>
    </div>
</div>

<div style="direction:ltr; margin-bottom: 350px" ;>
    <a asp-action="Index" class="btn btn-secondary">العودة للقائمة</a>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
